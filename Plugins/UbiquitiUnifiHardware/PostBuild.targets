<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
<ItemGroup>
  <FilesToDelete Include="delete-me.txt" />
  <FilesToCopy Include="copy-me.txt" />
</ItemGroup>
<Target Name="BeforeBuild">
  <Message Text="This is the BeforeBuild target" Importance="normal"/>
  <Delete Files="@(FilesToDelete)" />   
</Target>
<Target Name="AfterBuild">
  <Message Text="This is the AfterBuild target" Importance="normal"/>
  <Copy SourceFiles="@(FilesToCopy)" DestinationFolder="$(OutputPath)\Foo" />
</Target>
</Project>
